<%= content_for :head do %>
  <style type="text/css">
    .character{
      margin-top: 20px; 
    }
  </style>
<% end %>

<h2>
  <%= image_tag "#{Destiny::LINK_ROOT}#{@player.data_object.icon_path}" %><%= @player.data_object.display_name %>
</h2>

<h4>Characters</h4>

<% for character in @characters %>
  <div class="character panel panel-default">
    <div class="panel-heading">
      Level <%= character.level %> <%= character.class_type.name %> (<%= character.light_level %> light)
    </div>
    <div style="background-repeat: no-repeat; background-image: url('<%= "#{character.emblem_background_url}" %>');">
      <%= image_tag "#{character.emblem_url}" %>
    </div>
  </div>
<% end %>

